<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_real"
    tools:context=".screen.wallet.WalletFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="324dp"
        android:background="@drawable/gradientbackground"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:paddingLeft="0dp"
            android:text="Rp 23.444.000"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:paddingLeft="0dp"
            android:text="(0.3%) $521.67"
            android:textColor="#98FB98"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="430dp"
            android:layout_height="270dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/graph" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="25dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bitcoin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_vertical"
            android:paddingLeft="0dp"
            android:text="2000 gr"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-324dp"
        android:layout_marginBottom="236dp"
        android:background="@drawable/shape"
        android:text="@string/app_name" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="60dp"
            android:layout_height="92dp"
            android:paddingLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bitcoin" />

        <TextView
            android:id="@+id/txtGram"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:paddingTop="20dp"
            android:text="0,5 gr"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 23.444.000"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="235dp"
        android:background="@drawable/shape_white"
        android:text="@string/app_name" >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="92dp"
            android:paddingLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bitcoin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:paddingTop="20dp"
            android:text="1 gr"
            android:textColor="@color/black_real"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="47dp"
        android:background="@drawable/shape_brown"
        android:text="@string/app_name" >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="92dp"
            android:paddingLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bitcoin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:paddingTop="20dp"
            android:text="2 gr"
            android:textColor="@color/black_real"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/shape_maroon"
        android:text="@string/app_name" >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="92dp"
            android:paddingLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bitcoin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:paddingTop="20dp"
            android:text="3 gr"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>


